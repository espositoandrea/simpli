# Factorial: i! for i in a specified list

n := [1, 3, 5, 7];
fact := [1, 1, 1, 1];
i := 0;
c := "Factorial of ";
while i<|n| do
	while !(n[i]<=0) do
		fact[i] := fact[i] * n[i];
		n[i] := n[i] - 1;
	end;
	i := i + 1;
    c := c ++ "n";
end
